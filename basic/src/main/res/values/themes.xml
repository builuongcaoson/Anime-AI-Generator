<resources xmlns:tools="http://schemas.android.com/tools">z
    <!-- Base application theme. -->
    <style name="Theme.Basic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/tools_theme</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tools_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tools_theme</item>
        <item name="colorOnSecondary">#C6C6C6</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tools_theme</item>
        <item name="colorOnTertiary">#878787</item>
        <!-- Status bar - navigation bar color. -->
        <item name="android:statusBarColor">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>

<!--        Material dialog-->
        <item name="md_color_button_text">@color/tools_theme</item>
        <item name="md_corner_radius">@dimen/_10sdp</item>
        <item name="md_background_color">@color/white</item>
    </style>

    <style name="Theme.Basic.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/tools_theme</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tools_theme</item>
        <item name="colorOnPrimary">@color/tools_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tools_theme</item>
        <item name="colorOnSecondary">@color/tools_theme</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tools_theme</item>
        <item name="colorOnTertiary">@color/tools_theme</item>
        <!-- Status bar - navigation bar color. -->
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>

        <!--        Material dialog-->
        <item name="md_color_button_text">@color/tools_theme</item>
        <item name="md_corner_radius">@dimen/_10sdp</item>
        <item name="md_background_color">@color/white</item>
    </style>

</resources>