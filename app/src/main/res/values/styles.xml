<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rec_corner_top_15dp</item>
        <item name="android:backgroundTint">?android:windowBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetFragmentStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/tools_theme</item>
        <item name="android:colorBackground">#EDECED</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/textPrimaryDark</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorTertiary">@color/tertiaryLight</item>
    </style>

    <style name="LsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/secondaryLight</item>
        <item name="colorControlActivated">@color/secondaryLight</item>
    </style>

</resources>