<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/textPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSecondary">@color/textPrimaryDark</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/colorOnTertiary</item>
        <item name="colorOnTertiary">@color/textPrimaryDark</item>
    </style>
</resources>