<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/white1</item>
        <item name="colorAccent">@color/tools_theme</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:colorBackground">#EDECED</item>
        <item name="android:statusBarColor">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="colorControlActivated">@color/tools_theme</item>
        <item name="colorControlNormal">#D5D5D5</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#1A000000</item>
        <item name="colorOnPrimary">@color/textPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/textSecondaryDark</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/textTertiaryDark</item>
    </style>

    <style name="Theme.Preview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/tools_theme</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:textColorTertiary">@color/textTertiaryDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:colorBackground">#121212</item>
    </style>

    <style name="Theme.Crop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/tools_theme</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:textColorTertiary">@color/textTertiaryDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:colorBackground">#121212</item>
    </style>

</resources>