<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_65sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Input Prompt"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/rec_corner_15dp_stroke_2dp"
                        android:backgroundTint="?android:textColorTertiary"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.basic.common.widget.LsEditText
                                android:id="@+id/editPrompt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="top"
                                android:hint="What do you want to create?"
                                android:maxLength="1000"
                                android:maxLines="5"
                                android:minHeight="@dimen/_40sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:textColor="?android:textColorPrimary"
                                android:textColorHint="?android:textColorSecondary"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintEnd_toStartOf="@id/viewPhoto"
                                app:layout_constraintHeight_min="@dimen/_40sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/viewPhoto"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:visibility="gone"
                                app:cardBackgroundColor="?android:windowBackground"
                                app:cardCornerRadius="@dimen/_15sdp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/editPrompt"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:visibility="visible">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/previewPhoto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        tools:src="@tools:sample/avatars" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/closePhoto"
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="@drawable/circle"
                                        android:backgroundTint="?cardBackgroundColor"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/ic_baseline_close"
                                        android:tint="?android:textColorPrimary"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/random"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:cardBackgroundColor="?colorAccent"
                                app:cardCornerRadius="@dimen/_15sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_3sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center_vertical"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/ic_bulb"
                                        android:tint="?colorOnPrimary" />

                                    <com.basic.common.widget.LsTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:text="Random"
                                        android:textColor="?colorOnPrimary"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

<!--                            <RelativeLayout-->
<!--                                android:id="@+id/random"-->
<!--                                android:layout_centerVertical="true"-->
<!--                                android:layout_marginStart="@dimen/_5sdp"-->
<!--                                android:layout_width="@dimen/_30sdp"-->
<!--                                android:layout_height="@dimen/_30sdp">-->

<!--                                <androidx.appcompat.widget.AppCompatImageView-->
<!--                                    android:layout_width="@dimen/_25sdp"-->
<!--                                    android:layout_height="@dimen/_25sdp"-->
<!--                                    android:padding="@dimen/_5sdp"-->
<!--                                    android:src="@drawable/ic_bulb"-->
<!--                                    android:tint="?colorPrimary" />-->

<!--                            </RelativeLayout>-->

                            <LinearLayout
                                android:id="@+id/viewActionPrompt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5sdp">

                                <RelativeLayout
                                    android:id="@+id/photo"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/_23sdp"
                                        android:layout_height="@dimen/_23sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_centerInParent="true"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_picture"
                                        android:tint="?colorPrimary" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/history"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/_23sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_height="@dimen/_23sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_history"
                                        android:tint="?colorPrimary" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/viewClear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:visibility="gone">

                                <com.basic.common.widget.LsTextView
                                    android:id="@+id/count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:text="1/1000"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="@dimen/_10ssp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/clear"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/circle"
                                    android:backgroundTint="?colorPrimary"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_baseline_close"
                                    android:tint="?colorOnPrimary" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Model and Style"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/viewModel"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:cardBackgroundColor="?cardBackgroundColor"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/viewStyle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_toStartOf="@id/viewPlusOrNextModel"
                                    android:orientation="vertical">

                                    <com.basic.common.widget.LsTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Model"
                                        android:textColor="?android:textColorSecondary"
                                        android:textSize="@dimen/_10ssp" />

                                    <com.basic.common.widget.LsTextView
                                        android:id="@+id/displayModel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:singleLine="true"
                                        android:text="Pick a Model"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/viewPlusOrNextModel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/ic_arrow_right"
                                            android:rotation="90"
                                            android:tint="?android:textColorPrimary" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/viewStyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:cardBackgroundColor="?cardBackgroundColor"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/viewModel"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_toStartOf="@id/viewPlusOrNextStyle"
                                    android:orientation="vertical">

                                    <com.basic.common.widget.LsTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Style"
                                        android:textColor="?android:textColorSecondary"
                                        android:textSize="@dimen/_10ssp" />

                                    <com.basic.common.widget.LsTextView
                                        android:id="@+id/displayStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:ellipsize="end"
                                        android:singleLine="true"
                                        android:text="Pick a Style"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/viewPlusOrNextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/ic_arrow_right"
                                            android:rotation="90"
                                            android:tint="?android:textColorPrimary" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Aspect Ratio"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewAspectRatio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:ignore="RtlSymmetry"
                        tools:listitem="@layout/item_aspect_ratio" />

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Batch production"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <com.sola.anime.ai.generator.common.widget.quantitizer.HorizontalQuantitizer
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:minValue="0"
                        app:maxValue="100"
                        app:step="5"
                        app:value="1"
                        android:layout_gravity="center_horizontal" />

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="LoRA"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_13ssp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/viewLoRA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardBackgroundColor="?cardBackgroundColor"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_5sdp">

                                <com.basic.common.widget.LsTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="Pick a LoRA"
                                    android:textColor="?android:textColorPrimary"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp">

                                <com.basic.common.widget.LsTextView
                                    android:id="@+id/viewMoreLoRA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:text="View More"
                                    android:textColor="?android:textColorPrimary"
                                    android:textSize="@dimen/_10ssp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:rotation="90"
                                        android:src="@drawable/ic_arrow_right"
                                        android:tint="?android:textColorPrimary"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerLoRA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_lora_in_art" />

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Advanced Settings"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/viewAdvancedSetting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardBackgroundColor="?cardBackgroundColor"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <com.basic.common.widget.LsTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="Choose Settings"
                                    android:textColor="?android:textColorPrimary"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:rotation="90"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="?android:textColorPrimary" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <com.basic.common.widget.LsTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="Inspirations!"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="@dimen/_13ssp"
                                app:textFont="semi" />

                            <LinearLayout
                                android:id="@+id/viewSeeAllExplore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_3sdp">

                                <com.basic.common.widget.LsTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="See all"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="@dimen/_10ssp"
                                    app:textFont="semi" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_arrow_right"
                                    android:tint="?android:textColorSecondary" />

                            </LinearLayout>

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewExplore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:padding="@dimen/_5sdp"
                            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                            app:spanCount="2"
                            tools:alpha="1"
                            tools:listitem="@layout/item_preview_explore" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGenerate"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="?colorPrimary"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_arrow_right"
                android:tint="?colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconWatchAd"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_video_clip"
                android:tint="?colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Generate"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/_13ssp"
                        app:textFont="semi" />

                    <com.basic.common.widget.LsTextView
                        android:id="@+id/textDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Watch an ad"
                        android:textColor="?colorOnSecondary"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>