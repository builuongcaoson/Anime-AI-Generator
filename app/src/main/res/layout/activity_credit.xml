<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.iap.IapActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/preview_credit_1"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"
            android:backgroundTint="?android:windowBackground"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_close"
            android:tint="?android:textColorPrimary" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rec_corner_top_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="?colorAccent"
            app:strokeWidth="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="@dimen/_50sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/checkbox1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_stroke_1dp"
                    android:backgroundTint="?colorAccent"
                    android:layout_height="@dimen/_20sdp"/>

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/checkbox1"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.basic.common.widget.LsTextView
                            android:text="10000"
                            app:textFont="semi"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="?android:textColorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.basic.common.widget.LsTextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_12ssp"
                            android:text="Credits"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.basic.common.widget.LsTextView
                            android:text="+5000 credits for fist purchase"
                            app:textFont="semi"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="?colorTertiary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.basic.common.widget.LsTextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            android:text="Credits"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <com.basic.common.widget.LsTextView
                    android:text="$99.99"
                    android:textSize="@dimen/_15ssp"
                    app:textFont="semi"
                    android:textColor="?android:textColorPrimary"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/viewContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="?colorAccent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_3sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue"
                        android:textColor="?colorOnPrimary"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/_12ssp"
                        app:textFont="semi" />

                    <com.basic.common.widget.LsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Get 1000 Credits"
                        android:textColor="?colorOnSecondary"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardBackgroundColor="?colorAccent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.basic.common.widget.LsTextView
                    android:textSize="@dimen/_10ssp"
                    android:textColor="?colorOnPrimary"
                    android:text="Get extra credits discount with subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/viewPrice"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.basic.common.widget.LsTextView
                android:text="Why it's paid?"
                android:textColor="?android:textColorPrimary"
                app:textFont="semi"
                android:textSize="@dimen/_15ssp"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"/>

            <com.basic.common.widget.LsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:text="• Batch production will launch a separate server resource to produce batch pictures at a super fast speed. It's expensive, but we made it as affordable as possible"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

